<div>
  <div class="card-deck" tal:repeat="item items">
    <div class="card" style="max-width: 36rem;">
      <img 
        class="card-img-top"
        src="${request.static_path('phoenix:static/phoenix/img/missing_thumb_doesnotexist.png')}"
        alt=""
        tal:condition="not item.preview"/>
      <img 
        class="card-img-top"
        src="${item.preview}" 
        alt="No Preview"
        tal:condition="item.preview"/>
      <div class="card-body">
        <h5 class="card-title">
          ${item.title}
        </h5>
        <p class="card-text">
          ${item.get('abstract') or ''}
          <div tal:condition="item.reference">
            <span class="bg-info">
              <small>${item.reference.split('/')[-1]}</small>
            </span>
          </div>
          <div tal:condition="item.data">
            <span tal:repeat="data item.data" class="bg-info">
              ${data}
            </span>
          </div>
        </p>
        <a href="${item.reference}" tal:condition="item.reference"
            target="_" data-toggle="tooltip"
            title="Download" data-value="value" class="btn btn-primary">
          Download
        </a>
      </div>
    </div>
  </div>  
 
</div>

<metal:block use-macro="main_template">

  <div metal:fill-slot="content">
    <div class="container">
      <div class="row">
        <div class="col"> 
          <h4> 
            ${title}
            <small>Please choose one of the processes to submit a job.</small>
          </h4><!-- header -->
        </div>
      </div>

      <div class="row">
        <div class="col"> 
          <div class="card card-body text-white bg-secondary">
            <h5>${description}</h5>
          </div><!-- service description -->
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="card-deck" tal:repeat="item items">
            <div class="card" style="max-width: 18rem;">
              <img src="${item.media}" 
                  class="card-img-top"
                  alt="No Preview"
                  tal:condition="item.media is not None">
              <img src="${request.static_path('phoenix:static/phoenix/img/missing_thumb.png')}"
                  class="card-img-top"
                  alt="No Preview"
                  tal:condition="item.media is None">
              <div class="card-body">
                <h5 class="card-title">
                  <a href="${item.url}">${item.title}</a>
                </h5>
                <p class="card-text">${item.description}</p>
              </div>
            </div>
          </div>
    
        </div><!-- col -->
      </div>
    </div><!-- container -->
  </div>

</metal:block>

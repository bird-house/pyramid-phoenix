<metal:block use-macro="main_template">

  <div metal:fill-slot="content">
    <div class="container">
      <!-- header -->
      <div class="row">
        <div class="col"> 
          <div class="card">
            <div class="card-header">Please complete the form below and submit a job</div>
          </div> 
        </div>
      </div>

      <div class="row">
        <div class="col"> 
          <div class="card card-body text-white bg-secondary">
            ${getattr(process, 'abstract', 'No Summary')}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="card card-body">
            <tal:form replace="structure form">The form will render here</tal:form>
          </div>
        </div>
      </div>

    </div>
  </div>

</metal:block>

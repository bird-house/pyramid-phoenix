<metal:block use-macro="main_template">

    <div metal:fill-slot="content">
      <div class="container">
        <div class="row">
          <div class="col"> 
            <!-- header -->
           <h2>
              Processes
              <small>
                Choose one of the pinned processes or a Web Processing Service.
              </small>
            </h2>
          </div>
        </div>

        <!-- section wps services -->
        <div class="container">
          <div class="row">
            <div class="col col-md-12">
              <p/>
              <h4 class="float-start">
                Available Web Processing Services
              </h4>
            </div>
          </div> <!-- row -->
          <div class="row">
            <div class="col col-md-12">
              <ul class="list-group">
                <li class="list-group-item" tal:repeat="item items">
                    <div class="d-flex">
                      <div>
                          <h4>
                            <a href="${item.url}">${item.title}</a>
                          </h4>
                          <div>
                              <span class="text-muted">${item.description}</span>
                          </div>
                      </div><!-- media body -->
                    </div><!-- media -->
                </li>
              </ul>
            </div>
          </div> <!-- row -->
        </div> <!-- container services-->

        </div>
    </div>

</metal:block>

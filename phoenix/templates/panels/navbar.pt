<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/">${layout.project_brand}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div id="navbar" class="collapse navbar-collapse">
      <!-- nav with text -->
      <ul class="navbar-nav mr-auto">
        <div tal:repeat="item items">
          <li class="nav-item ${'active' if item.active else ''}">
            <a class="nav-link" href="${item.url}">
              ${item.name}
              <span tal:condition="item.active" class="sr-only">(current)</span>
            </a>
          <li>
        </div>

        <!-- static links -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
            Help
          </a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="${layout.project_docs}" target="_">
              User Documentation
            </a>
          </div>
        </li>
      </ul>

      <!-- nav on right side -->

      <ul class="navbar-nav mr-auto">
        <div tal:repeat="item subitems">
          <!-- subitem -->
          <li tal:condition="'items' not in item" class="nav-item ${'active' if item['active'] else ''}">
            <a class="nav-link" href="${item.url}">
              ${item.name}
            </a>
          </li>
          <!-- dropdown -->
          <li tal:condition="'items' in item" class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
              ${item.name}
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="${dropdown_item.url}" tal:repeat="dropdown_item item['items']">
                ${dropdown_item.name}
              </a>
            </div>
          </li>
        </div>
        <!-- sign-in -->
        <li class="nav-item" tal:condition="not request.user">
          <div class="col-sm-12">
            <a href="${request.route_path('sign_in')}" class="nav-link">Sign In</a>
          </div>
        </li>
        <!-- user -->
        <li tal:condition="request.user" class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
              ${request.user.get('name', 'Guest')}
          </a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="${request.route_path('profile', userid=request.unauthenticated_userid, tab='profile')}"> My Profile</a>
            <a class="dropdown-item" href="${request.route_path('people')}" tal:condition="request.has_permission('admin')"> People</a>
            <a class="dropdown-item" href="${request.route_path('settings')}" tal:condition="request.has_permission('admin')"> Settings</a>
            <a class="dropdown-item" href="/account/logout"> Sign Out</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>

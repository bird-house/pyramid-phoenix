<metal:block use-macro="main_template">

  <div metal:fill-slot="content">
    <div class="container">

      <div class="card">
        <div class="card-header">
          <div class="card-title">
            <h2>Services</h2>
            <div class="float-end">
              <a class="btn btn-success btn-sm"
                 rel="tooltip"
                 data-toggle="tooltip"
                 title="Register a new Service"
                 href="${request.route_path('register_service')}">
                Register a new Service
              </a>
              <a class="btn btn-danger btn-sm"
                 rel="tooltip"
                 data-toggle="tooltip"
                 title="Remove all Services"
                 href="${request.route_path('clear_services')}">
                Remove all Services
              </a>
            </div>
          </div>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <li class="list-group-item" tal:repeat="item items">
              <div class="d-flex">
                <div class="d-flex">
                  <h4>
                    <a href="${request.route_path('service_details', service_id=item.identifier)}">${item.title}</a>
                  </h4>
                  ${item.abstract}
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </div>

</metal:block>

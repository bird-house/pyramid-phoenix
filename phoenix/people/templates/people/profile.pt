<metal:block use-macro="main_template">

    <div metal:fill-slot="content">

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">${user_name}</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <!--Body content-->
                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-pills card-header-pills">
                                <li class="nav-item">
                                    <a class="nav-link ${'active' if active=='profile' else ''}" 
                                        href="${request.route_path('profile', userid=userid, tab='profile')}">
                                        Profile
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link ${'active' if active=='group' else ''}" 
                                        href="${request.route_path('profile', userid=userid, tab='group')}">
                                        Group Permission
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <tal:form replace="structure form">The form will render here</tal:form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</metal:block>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col col-sm-3 text-center">
        <h4>All Jobs</h4>
        <span class="badge">${total}</span>
      </div>
      <div class="col col-sm-3 text-center">
        <h4>Running</h4>
        <span class="badge">${running}</span>
      </div>
      <div class="col col-sm-3 text-center">
        <h4>Succeeded</h4>
        <span class="badge">${succeeded}</span>
      </div>
      <div class="col col-sm-3 text-center">
        <h4>Failed</h4>
        <span class="badge">${failed}</span>
      </div>
    </div>
  </div>
</div>


